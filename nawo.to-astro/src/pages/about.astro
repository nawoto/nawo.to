---
import '../styles/global.css';
import SEO from '../components/SEO.astro';
import { SITE } from '../config';
import Footer from '../components/Footer.astro';
import Icon from '../components/Icon.astro';
import Comments from '../components/Comments.astro';

const pageTitle = `About | ${SITE.title}`;
const pageDescription = "西村直人（nawoto）のプロフィール。エンジニアリングマネージャー、スクラムマスター、アジャイル開発専門家として活動。";
const shareUrl = `${SITE.url}/about`;
const authorName = SITE.author.name;
const profileImage = `${SITE.url}/images/profile-pic.png`;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <SEO
      title={pageTitle}
      description={pageDescription}
      canonical={shareUrl}
      openGraph={{
        basic: {
          type: "profile",
          title: pageTitle,
          image: profileImage,
          url: shareUrl
        },
        optional: {
          description: pageDescription,
          siteName: SITE.title,
          locale: "ja_JP"
        }
      }}
      twitter={{
        card: "summary_large_image",
        site: `@${SITE.social.twitter}`,
        creator: `@${SITE.social.twitter}`,
        title: pageTitle,
        description: pageDescription,
        image: profileImage
      }}
      extend={{
        meta: [
          // プロフィール専用メタタグのみ追加
          { property: "profile:first_name", content: "Naoto" },
          { property: "profile:last_name", content: "Nishimura" },
          { property: "profile:username", content: "nawoto" },
          { property: "profile:gender", content: "male" }
        ]
      }}
    />

    <!-- Person Schema.org JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "西村 直人",
      "alternateName": ["NISHIMURA Naoto", "nawoto"],
      "image": profileImage,
      "url": shareUrl,
      "jobTitle": ["エンジニアリングマネージャー", "スクラムマスター"],
      "worksFor": [
        {
          "@type": "Organization",
          "name": "株式会社エス・エム・エス"
        },
        {
          "@type": "Organization", 
          "name": "一般社団法人アジャイルチームを支える会",
          "description": "代表理事"
        }
      ],
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Taito-ku, Tokyo",
        "addressCountry": "JP"
      },
      "birthDate": "1974-05-24",
      "gender": "Male",
      "nationality": "Japanese",
      "sameAs": [
        "https://twitter.com/nawoto",
        "https://github.com/nawoto/",
        "https://speakerdeck.com/nawoto",
        "https://www.instagram.com/nawoto/",
        "https://suzuri.jp/nawoto/",
        "https://www.amazon.co.jp/~/e/B00B46MLPG"
      ],
      "author": [
        {
          "@type": "Book",
          "name": "SCRUM BOOT CAMP THE BOOK【増補改訂版】",
          "isbn": "9784798163673",
          "publisher": "翔泳社",
          "datePublished": "2020-05-20"
        },
        {
          "@type": "Book", 
          "name": "SCRUM BOOT CAMP THE BOOK",
          "isbn": "9784798129716",
          "publisher": "翔泳社",
          "datePublished": "2013-02-13"
        }
      ],
      "hasCredential": {
        "@type": "EducationalOccupationalCredential",
        "credentialCategory": "Award",
        "name": "楽天テクロノロジーアワード 2011 Ruby 賞"
      }
    })} />
  </head>
  <body class="mx-auto max-w-screen-xl">
    <header>
      <div class="hover-style py-6">
        <h3 class="text-center text-6xl font-black uppercase tracking-widest text-gray-500 md:text-8xl">
          readme
        </h3>
      </div>
      <nav>
        <ul class="grid grid-cols-2 divide-x text-center text-lg uppercase md:grid-cols-4">
          <li class="hover-style border-y">
            <a href="/">top</a>
          </li>
          <li class="hover-style border-y">
            <a href="/logs">log</a>
          </li>
          <li class="hover-style border-b md:border-y">
            <a href="/texts">texts</a>
          </li>
          <li class="hover-style border-b md:border-y">
            <a href="/about">about</a>
          </li>
        </ul>
      </nav>
    </header>

    <article
      class="mx-5 md:mx-44"
      itemscope
      itemtype="https://www.schema.org/Person"
    >
      <div>
        <section class="flex flex-row py-3">
          <div>
            <img 
              class="z-10 overflow-hidden rounded-lg w-[164px] h-[164px]"
              itemprop="image"
              src="/images/profile-pic.png"
              alt="Profile picture"
            />
          </div>
          <div class="px-3 text-right md:text-left">
            <h3
              class="text-lg font-bold md:text-4xl"
              itemprop="name"
              lang="en"
            >
              {authorName}
            </h3>
            <div class="text-xl" itemprop="name">
              西村 直人
            </div>
            <div class="text-gray-400">nawoto</div>
            <div class="text-gray-400">
              📍
              <span class="pl-px" itemprop="address">
                <span>Taito-ku, Tokyo</span>,
                <span itemprop="nationality">Japan</span>
              </span>
            </div>
            <div>
              <a class="text-gray-400" href="/">
                https://nawo.to
              </a>
              <meta
                itemprop="url"
                content="https://nawo.to/about"
                itemref="my-urls"
              />
            </div>
            <ul
              class="flex flex-row justify-end pt-2 text-xl md:justify-start md:text-sm"
              id="my-urls"
            >
              <li class="hover-style pr-1">
                <a
                  href="https://twitter.com/nawoto"
                  itemprop="sameas"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="x" class="w-6 h-6" />
                </a>
              </li>
              <li class="hover-style px-1">
                <a
                  href="https://github.com/nawoto/"
                  itemprop="sameas"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="github" class="w-6 h-6" />
                </a>
              </li>
              <li class="hover-style px-1">
                <a
                  href="https://speakerdeck.com/nawoto"
                  itemprop="sameas"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="speaker-deck" class="w-6 h-6" />
                </a>
              </li>
              <li class="hover-style px-1">
                <a
                  href="https://www.instagram.com/nawoto/"
                  itemprop="sameas"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="instagram" class="w-6 h-6" />
                </a>
              </li>
              <li class="hover-style px-1">
                <a
                  href="https://suzuri.jp/nawoto/"
                  itemprop="sameas"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="t-shirt" class="w-6 h-6" />
                </a>
              </li>
              <li class="hover-style pl-1">
                <a href="/rss.xml">
                  <Icon name="rss" class="w-6 h-6" />
                </a>
              </li>
            </ul>
          </div>

          <meta itemprop="gender" content="Male" />
          <meta itemprop="birthDate" content="1974-05-24" />
          <meta itemref="my-awards" />
          <meta itemprop="author" itemref="scrum-bcbook-2020" />
          <meta itemprop="owns" itemref="scrum-bcbook-2020" />
          <meta itemprop="author" itemref="scrum-bcbook" />
          <meta itemprop="owns" itemref="scrum-bcbook" />
          <meta itemprop="translator" itemref="agile-samurai-ja" />
          <meta itemprop="owns" itemref="agile-samurai-ja" />
        </section>

        <section class="py-3 text-xs">
          <h3>#####</h3>
          <div>
            <p itemprop="affiliation" class="md:text-sm">
              株式会社エス・エム・エス
            </p>
            <p itemprop="jobTitle" class="pl-2">
              エンジニアリングマネージャー
            </p>
            <p itemprop="jobTitle" class="pl-2">
              スクラムマスター
            </p>
          </div>
          <div class="pt-2">
            <p itemprop="affiliation" class="md:text-sm">
              一般社団法人アジャイルチームを支える会
            </p>
            <p itemprop="jobTitle" class="pl-2">
              代表理事
            </p>
          </div>
          <span>#####</span>
        </section>
      </div>

      <section class="py-2">
        <h3 class="text-2xl">TL;DR</h3>
        <span class="text-sm text-gray-400">
          /** 講演するときのプロフィール **/
        </span>
        <div class="text-sm">
          <p class="py-2">
            2005年からアジャイルなソフトウェア開発を実践。
          </p>
          <p class="py-2">
            エクストリーム・プログラミングとの出会いと株式会社永和システムマネジメントでチーム開発を経験して以来、「アジャイルな開発を通じて、ビジネスとともに成長できるような良いチームを増やしたい」という想いで日々奮闘中。
          </p>
          <p class="py-2" itemprop="description">
            <a href="#agile-samurai-ja" class="link">
              書籍 『アジャイルサムライ』
            </a>
            監訳、
            <a href="#scrum-bcbook-2020" class="link">
              書籍「SCRUM BOOT CAMP THE BOOK【増補改訂版】」
            </a>
            の執筆をはじめ、 「Scrum Boot Camp
            Premium」「アジャイル相談室」などこれからの人に向けた研修やイベント、支援を続けています。
          </p>
          <p class="py-2">現在、幼い娘の子育てに奮闘中😊</p>
        </div>
      </section>

      <section class="py-2">
        <h3 class="text-2xl">📚Books</h3>
        <span class="text-sm text-gray-400">/** 執筆などなど **/</span>
        <ul class="md:list-disc md:text-lg">
          <li
            id="scrum-bcbook-2020"
            class="py-2"
            itemscope
            itemtype="https://www.schema.org/Book"
          >
            <a
              href="https://amzn.to/3a8TEfA"
              class="link"
              target="_blank"
            >
              <span itemprop="name">
                SCRUM BOOT CAMP THE BOOK【増補改訂版】
                スクラムチームではじめるアジャイル開発
              </span>
            </a>
            ,
            <span
              class="pl-2"
              itemprop="author"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <a
                href="/about"
                rel="author"
                itemprop="url"
                class="link"
                target="_blank"
              >
                <span itemprop="name">西村 直人</span>
              </a>
            </span>
            (著)・
            <span
              itemprop="author"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <span itemprop="name">永瀬 美穂</span>
            </span>
            (著)・
            <span
              itemprop="author"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <span itemprop="name">吉羽 龍太郎</span>
            </span>
            (著),
            <span
              class="pl-2"
              itemprop="publisher"
              itemscope
              itemtype="http://schema.org/Organization"
            >
              <span itemprop="name">翔泳社</span>
            </span>
            ,
            <span class="pl-2" itemprop="datePublished">
              2020/05/20
            </span>
            ,
            <a
              href="https://www.shoeisha.co.jp/book/detail/9784798167282"
              class="link pl-2"
              target="_blank"
            >
              ISBM:
              <span itemprop="isbn">9784798163680</span>
            </a>
          </li>

          <li
            id="scrum-bcbook"
            class="py-2 text-gray-500"
            itemscope
            itemtype="https://www.schema.org/Book"
          >
            <a href="https://amzn.to/39Yagq7" class="link">
              <span itemprop="name">SCRUM BOOT CAMP THE BOOK</span>
            </a>
            ,
            <span
              class="pl-2"
              itemprop="author"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <a href="/about" rel="author" itemprop="url" class="link">
                <span itemprop="name">西村 直人</span>
              </a>
            </span>
            (著)・
            <span
              itemprop="author"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <span itemprop="name">永瀬 美穂</span>
            </span>
