---
interface Props {
  title: string;
  isRootPath?: boolean;
}

const { title, isRootPath = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <div data-is-root-path={isRootPath}>
      <header>
        <div class="hover-style py-4 md:py-6">
          <h3 class="text-center text-5xl font-black tracking-widest md:text-8xl">
            <a href="/">{title}</a>
          </h3>
        </div>
        <nav>
          <ul class="grid grid-cols-2 divide-x text-center text-lg uppercase md:grid-cols-4">
            <li class="hover-style border-y p-3">
              <a href="/">top</a>
            </li>
            <li class="hover-style border-y p-3">
              <a href="/logs">log</a>
            </li>
            <li class="hover-style border-b p-3 md:border-y">
              <a href="/texts">texts</a>
            </li>
            <li class="hover-style border-b p-3 md:border-y">
              <a href="/about">about</a>
            </li>
          </ul>
        </nav>
      </header>

      <main>
        <div class="md:flex md:flex-row">
          {!isRootPath && (
            <div class="md:order-last md:basis-3/4">
              <slot />
            </div>
          )}
          <div class="border-b p-4 md:border-b-0 md:border-r md:basis-1/4">
            <Bio />
          </div>
          {isRootPath && <div class="md:basis-3/4"><slot /></div>}
        </div>
      </main>

      <footer class="mt-8 border-t p-4 text-center text-sm text-gray-500">
        Â© {new Date().getFullYear()}, NISHIMURA Naoto All Rights Reserved.
      </footer>
    </div>
    <style is:global>
      /* Add any additional global styles here */
    </style>
  </body>
</html> 