---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const texts = await getCollection('texts');
const sortedTexts = texts.sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<Layout title="Texts - nawo.to">
  <div class="brutalist-container">
    <h1 class="brutalist-heading">Texts</h1>
    <div class="mt-8">
      {sortedTexts.map(text => (
        <article class="mb-8 border-b pb-8 last:border-b-0">
          <header>
            <h2 class="text-2xl font-semibold">
              <a href={`/texts/${text.slug}`} class="hover-style">
                {text.data.title}
              </a>
            </h2>
          </header>
          {text.data.description && (
            <p class="mt-4 text-gray-600">{text.data.description}</p>
          )}
        </article>
      ))}
    </div>
  </div>
</Layout> 