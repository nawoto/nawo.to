---
import '../styles/global.css';
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import { SITE } from '../config.js';
import Footer from '../components/Footer.astro';
import Icon from '../components/Icon.astro';
import Comments from '../components/Comments.astro';
import StructuredData from '../components/StructuredData.astro';
import { generatePersonStructuredData, DEFAULT_PERSON_DATA } from '../data/structured-data.js';

const pageTitle = `About | ${SITE.title}`;
const pageDescription = "西村直人（nawoto）のプロフィール。エンジニアリングマネージャー、スクラムマスター、アジャイル開発専門家として活動。";
const shareUrl = `${SITE.url}/about`;
const authorName = SITE.author.name;
const profileImage = `${SITE.url}/images/profile-pic.png`;

// Person構造化データを生成
const personStructuredData = generatePersonStructuredData(DEFAULT_PERSON_DATA);
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <SEO
      title={pageTitle}
      description={pageDescription}
      canonical={shareUrl}
      openGraph={{
        basic: {
          type: "profile",
          title: pageTitle,
          image: profileImage,
          url: shareUrl
        },
        optional: {
          description: pageDescription,
          siteName: SITE.title,
          locale: "ja_JP"
        }
      }}
      twitter={{
        card: "summary_large_image",
        site: `@${SITE.social.twitter}`,
        creator: `@${SITE.social.twitter}`,
        title: pageTitle,
        description: pageDescription,
        image: profileImage
      }}
      extend={{
        meta: [
          { name: "viewport", content: "width=device-width, initial-scale=1.0" },
          // プロフィール専用メタタグのみ追加
          { property: "profile:first_name", content: "Naoto" },
          { property: "profile:last_name", content: "Nishimura" },
          { property: "profile:username", content: "nawoto" },
          { property: "profile:gender", content: "male" }
        ]
      }}
    />

    <!-- Google Fonts preload & stylesheet -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@400;600;900&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@400;600;900&display=swap" />

    <!-- Person Schema.org JSON-LD -->
    <StructuredData data={personStructuredData} />
  </head>
  <body class="mx-auto max-w-screen-xl">
    <Header title="readme" textColor="uppercase text-gray-500" showLink={false} />

    <article
      class="about-page mx-2 text-lg"
      itemscope
      itemtype="https://www.schema.org/Person"
    >
      <div>
        <section class="py-3">
          <div class="flex flex-col w-full">
            <div class="flex flex-row items-start w-full">
              <div class="flex-shrink-0">
                <picture>
                  <source srcset="/images/profile-pic.webp" type="image/webp" />
                  <img 
                    class="z-10 overflow-hidden rounded-lg w-[140px] h-[140px] md:w-[200px] md:h-[200px] object-cover mb-2"
                    itemprop="image"
                    src={SITE.images.profilePic}
                    alt="Profile picture"
                    width="140"
                    height="140"
                    loading="lazy"
                  />
                </picture>
              </div>
              <div class="flex flex-col w-full items-end ml-4 md:ml-6">
                <div class="text-right w-full">
                  <h3
                    class="text-lg font-bold md:text-4xl"
                    itemprop="name"
                    lang="en"
                  >
                    {authorName}
                  </h3>
                  <div class="text-xl" itemprop="name">
                    西村 直人
                  </div>
                  <div class="text-gray-400">nawoto</div>
                  <div class="text-gray-400">
                    📍
                    <span class="pl-px" itemprop="address">
                      <span>Asakusa, Tokyo</span>,
                      <span itemprop="nationality">Japan</span>
                    </span>
                  </div>
                  <div>
                    <a class="text-gray-400" href="/">
                      https://nawo.to
                    </a>
                    <meta
                      itemprop="url"
                      content="https://nawo.to/about"
                      itemref="my-urls"
                    />
                  </div>
                  <meta itemprop="gender" content="Male" />
                  <meta itemprop="birthDate" content="1974-05-24" />
                  <meta itemref="my-awards" />
                  <meta itemprop="author" itemref="scrum-bcbook-2020" />
                  <meta itemprop="owns" itemref="scrum-bcbook-2020" />
                  <meta itemprop="author" itemref="scrum-bcbook" />
                  <meta itemprop="owns" itemref="scrum-bcbook" />
                  <meta itemprop="translator" itemref="agile-samurai-ja" />
                  <meta itemprop="owns" itemref="agile-samurai-ja" />
                </div>
              </div>
            </div>
            {/* PC版のみ表示するSocials見出し */}
            <h3 class="hidden md:block text-xs text-gray-400 mb-1 select-none text-right">/** Socials **/</h3>
            <ul
              class="w-full flex flex-wrap justify-end pt-2 text-2xl md:text-sm gap-x-2 gap-y-1 md:justify-end"
              id="my-urls"
            >
              <li class="hover-style pr-1">
                <a
                  href={`https://twitter.com/${SITE.social.twitter}`}
                  itemprop="sameas"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="x" />
                </a>
              </li>
              <li class="hover-style px-1">
                <a
                  href={`https://github.com/${SITE.social.github}/`}
                  itemprop="sameas"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="github" />
                </a>
              </li>
              <li class="hover-style px-1">
                <a
                  href={`https://speakerdeck.com/${SITE.social.speakerdeck}`}
                  itemprop="sameas"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="speakerdeck" />
                </a>
              </li>
              <li class="hover-style px-1">
                <a
                  href={`https://www.instagram.com/${SITE.social.instagram}/`}
                  itemprop="sameas"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="instagram" />
                </a>
              </li>
              <li class="hover-style px-1">
                <a
                  href={`https://suzuri.jp/${SITE.social.suzuri}/`}
                  itemprop="sameas"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="suzuri" />
                </a>
              </li>
              <li class="hover-style px-1">
                <a
                  href={`https://www.facebook.com/${SITE.social.facebook}/`}
                  itemprop="sameas"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="facebook" />
                </a>
              </li>
              <li class="hover-style px-1">
                <a
                  href={`https://www.amazon.co.jp/~/e/${SITE.social.amazon}`}
                  itemprop="sameas"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="amazon" />
                </a>
              </li>
              <li class="hover-style pl-1">
                <a href="/rss.xml">
                  <Icon name="rss" />
                </a>
              </li>
            </ul>
          </div>
        </section>

        <section class="py-3 text-xs">
          <h3>#####</h3>
          <div>
            <p itemprop="affiliation" class="md:text-sm">
              東急株式会社
            </p>
            <p itemprop="jobTitle" class="pl-2">
              アジャイルコーチ
            </p>            
          </div>
          <div class="pt-2">
            <p itemprop="affiliation" class="md:text-sm">
              一般社団法人アジャイルチームを支える会
            </p>
            <p itemprop="jobTitle" class="pl-2">
              代表理事
            </p>
          </div>
          <span>#####</span>
        </section>
      </div>

      <section class="py-2">
        <h3 class="text-2xl">TL;DR</h3>
        <span class="text-sm text-gray-400">
          /** 講演するときのプロフィール **/
        </span>
        <div class="text-sm">
          <p class="py-2">
            2005年からアジャイルなソフトウェア開発を実践。
          </p>
          <p class="py-2">
            エクストリーム・プログラミングとの出会いと株式会社永和システムマネジメントでチーム開発を経験して以来、「アジャイルな開発を通じて、ビジネスとともに成長できるような良いチームを増やしたい」という想いで日々奮闘中。
          </p>
          <p class="py-2" itemprop="description">
            <a href="#agile-samurai-ja" class="link">
              書籍 『アジャイルサムライ』
            </a>
            監訳、
            <a href="#scrum-bcbook-2020" class="link">
              書籍「SCRUM BOOT CAMP THE BOOK【増補改訂版】」
            </a>
            の執筆をはじめ、 「Scrum Boot Camp
            Premium」「アジャイル相談室」などこれからの人に向けた研修やイベント、支援を続けています。
          </p>
          <p class="py-2">現在、幼い娘の子育てに奮闘中😊</p>
        </div>
      </section>

      <section class="py-2">
        <h3 class="text-2xl">📚Books</h3>
        <span class="text-sm text-gray-400">/** 執筆などなど **/</span>
        <ul class="md:list-disc md:text-lg">
          <li
            id="scrum-bcbook-2020"
            class="py-2"
            itemscope
            itemtype="https://www.schema.org/Book"
          >
            <a
              href="https://amzn.to/3a8TEfA"
              class="link"
              target="_blank"
            >
              <span itemprop="name">
                SCRUM BOOT CAMP THE BOOK【増補改訂版】
                スクラムチームではじめるアジャイル開発
              </span>
            </a>
            ,
            <span
              class="pl-2"
              itemprop="author"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <a
                href="/about"
                rel="author"
                itemprop="url"
                class="link"
                target="_blank"
              >
                <span itemprop="name">西村 直人</span>
              </a>
            </span>
            (著)・
            <span
              itemprop="author"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <span itemprop="name">永瀬 美穂</span>
            </span>
            (著)・
            <span
              itemprop="author"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <span itemprop="name">吉羽 龍太郎</span>
            </span>
            (著),
            <span
              class="pl-2"
              itemprop="publisher"
              itemscope
              itemtype="http://schema.org/Organization"
            >
              <span itemprop="name">翔泳社</span>
            </span>
            ,
            <span class="pl-2" itemprop="datePublished">
              2020/05/20
            </span>
            ,
            <a
              href="https://www.shoeisha.co.jp/book/detail/9784798167282"
              class="link pl-2"
              target="_blank"
            >
              ISBM:
              <span itemprop="isbn">9784798163680</span>
            </a>
          </li>

          <li
            id="scrum-bcbook"
            class="py-2 text-gray-500"
            itemscope
            itemtype="https://www.schema.org/Book"
          >
            <a href="https://amzn.to/39Yagq7" class="link">
              <span itemprop="name">SCRUM BOOT CAMP THE BOOK</span>
            </a>
            ,
            <span
              class="pl-2"
              itemprop="author"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <a href="/about" rel="author" itemprop="url" class="link">
                <span itemprop="name">西村 直人</span>
              </a>
            </span>
            (著)・
            <span
              itemprop="author"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <span itemprop="name">永瀬 美穂</span>
            </span>
            (著)・
            <span
              itemprop="author"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <span itemprop="name">吉羽 龍太郎</span>
            </span>
            (著),
            <span
              class="pl-2"
              itemprop="publisher"
              itemscope
              itemtype="http://schema.org/Organization"
            >
              <span itemprop="name">翔泳社</span>
            </span>
            ,
            <span class="pl-2" itemprop="datePublished">
              2013/02/13
            </span>
            ,
            <a
              href="https://www.shoeisha.co.jp/book/detail/9784798129716"
              target="_blank"
              class="link pl-2"
            >
              ISBM:
              <span itemprop="isbn">9784798129716</span>
            </a>
          </li>

          <li
            id="agile-samurai-ja"
            class="py-2"
            itemscope
            itemtype="https://www.schema.org/Book"
          >
            <a
              href="https://amzn.to/3NibkUc"
              class="link"
              target="_blank"
            >
              <span itemprop="name">アジャイルサムライ−達人開発者への道</span>
            </a>
            ,
            <span
              class="pl-2"
              itemprop="author"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <span itemid="name">Jonathan Rasmusson</span>
            </span>
            (著)・
            <span
              class="font-bold"
              itemprop="translator"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <a
                href="/about"
                rel="author"
                itemprop="url"
                class="link"
                target="_blank"
              >
                <span itemprop="name">西村 直人</span>
              </a>
            </span>
            (監訳)・
            <span
              itemprop="translator"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <span itemprop="name">角谷 信太郎</span>
            </span>
            (監訳)・
            <span
              itemprop="translator"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <span itemprop="name">近藤 修平</span>
            </span>
            (訳)・
            <span
              itemprop="translator"
              itemscope
              itemtype="https://schema.org/Person"
            >
              <span itemprop="name">角掛 拓未</span>
            </span>
            (訳),
            <span
              class="pl-2"
              itemprop="publisher"
              itemscope
              itemtype="http://schema.org/Organization"
            >
              <span itemprop="name">オーム社</span>
            </span>
            ,
            <span class="pl-2" itemprop="datePublished">
              2011/07/16
            </span>
            ,
            <a
              href="https://shop.ohmsha.co.jp/shopdetail/000000001901/"
              class="link"
              target="_blank"
            >
              ISBM:
              <span itemprop="isbn">9784274068560</span>
            </a>
          </li>
        </ul>

        <span class="pt-5 text-sm text-gray-400">
          /** Amazon へのリンク **/
        </span>

        <div class="space-y-4 prose max-w-none">
          <!-- 手動でAmazonカードのHTMLを記述 -->
          <p>おすすめの本：</p>
          <div class="amazon-card" data-asin="B086GBXRN6" data-url={`https://www.amazon.co.jp/dp/B086GBXRN6?tag=${SITE.affiliate.amazon}`}>
            <div class="amazon-card-placeholder">
              <p>Amazon商品カード (ASIN: B086GBXRN6) - 読み込み中...</p>
            </div>
          </div>
          <div class="amazon-card" data-asin="B00J1XKB6K" data-url={`https://www.amazon.co.jp/dp/B00J1XKB6K?tag=${SITE.affiliate.amazon}`}>
            <div class="amazon-card-placeholder">
              <p>Amazon商品カード (ASIN: B00J1XKB6K) - 読み込み中...</p>
            </div>
          </div>
        </div>
      </section>

      <div class="mt-4">
        <a
          href={`https://www.amazon.co.jp/~/e/${SITE.social.amazon}`}
          class="underline"
          target="_blank"
        >
          📚
          <span class="pl-1">Amazonの著者ページ</span>
        </a>
      </div>

      <section class="py-2" id="my-awards">
        <h3 class="text-2xl">🏆Awards</h3>
        <span class="text-sm text-gray-400">
          /** 表彰は嬉しいものです 😊 **/
        </span>
        <div>
          <a
            href="https://tech.rakuten.co.jp/rtc2011/report_award.html"
            class="link"
            target="_blank"
          >
            <span itemprop="award">
              楽天テクロノロジーアワード 2011 Ruby 賞
            </span>
          </a>
        </div>
      </section>
    </article>

    <h3 class="text-sm text-gray-400">/** Comments **/</h3>
    <Comments />
    <Footer />
    <script is:inline src="/js/amazon-cards.js"></script>
  </body>
</html> 