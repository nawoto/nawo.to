---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import { SITE } from '../config';
import TabNavigation from '../components/TabNavigation.astro';
import YearlyArticleList from '../components/YearlyArticleList.astro';
import { sortArticlesByDate } from '../utils/content';
import { getLogUrl } from '../utils/url';

const posts = sortArticlesByDate(await getCollection('logs'));
---

<Layout title={`LOGS | ${SITE.title}`}>
  <TabNavigation activeTab="logs" />
  <YearlyArticleList
    articles={posts}
    getArticleUrl={getLogUrl}
    showBorder={true}
    activeTab="logs"
  />
</Layout>

