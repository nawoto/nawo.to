---
import { SEO as AstroSEO } from 'astro-seo';
import { SITE } from '../config.js';

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  charset?: string;
  openGraph?: any;
  twitter?: any;
  extend?: any;
  ogimage?: string;
}

const {
  title,
  description,
  canonical,
  charset = 'UTF-8',
  openGraph,
  twitter,
  extend,
} = Astro.props;

// openGraphが存在しない場合のデフォルト値
const defaultOpenGraph = {
  basic: {
    type: 'website',
    title: title,
    image: SITE.images.defaultOg,
  },
};

const ogImageUrl = openGraph?.basic?.image || Astro.props.ogimage || SITE.images.defaultOg;

// openGraphが存在しない場合はデフォルト値を使用
const finalOpenGraph = openGraph
  ? {
      ...openGraph,
      basic: {
        ...defaultOpenGraph.basic,
        ...openGraph?.basic,
        image: ogImageUrl,
      },
    }
  : defaultOpenGraph;
---

<AstroSEO
  title={title}
  description={description}
  canonical={canonical}
  charset={charset}
  openGraph={finalOpenGraph}
  twitter={{
    ...twitter,
    image: ogImageUrl,
  }}
  extend={extend}
/>

