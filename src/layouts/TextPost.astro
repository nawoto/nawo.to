---
import Layout from './Layout.astro';
import Bio from '../components/Bio.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<Layout title={title}>
  <article class="brutalist-container prose prose-lg mx-auto">
    <header class="mb-8">
      <h1 class="brutalist-heading">{title}</h1>
      {description && (
        <p class="mt-4 text-center text-gray-600">{description}</p>
      )}
    </header>
    <div class="mt-8">
      <slot />
    </div>
    <hr class="my-8" />
    <Bio className="mt-8" />
  </article>
</Layout> 