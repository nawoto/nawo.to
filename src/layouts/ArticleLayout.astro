  itemListElement: [
    {
      "@type": "ListItem",
      position: 1,
      name: "Home",
      item: SITE.url
    },
    {
      "@type": "ListItem",
      position: 2,
      name: getListPageName(content.collection),
      item: `${SITE.url}${getListPageUrl(content.collection)}`
    },
    {
      "@type": "ListItem",
      position: 3,
      name: title,
      item: currentUrl
    }
  ]
});
